{
  "name": "yet-another-typescript-package-template",
  "version": "0.0.1",
  "main": "./lib/index.cjs",
  "types": "./lib/index.d.js",
  "exports": {
    "import": "./lib/index.mjs",
    "require": "./lib/index.cjs"
  },
  "module": "./lib/index.mjs",
  "type": "module",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "npm run clean:dist && concurrently npm:build:*",
    "build:docs": "typedoc",
    "build:rollup": "rollup -c",
    "build:types": "tsc -d --emitDeclarationOnly --declarationDir ./lib",
    "clean": "concurrently npm:clean:*",
    "clean:cover": "rimraf .nyc_output coverage",
    "clean:dist": "rimraf lib",
    "check-all": "concurrently npm:lint npm:test npm:prettier:check",
    "fix-all": "concurrently -m 1 npm:prettier npm:lint-fix:*",
    "lint": "concurrently npm:lint:*",
    "lint:eslint": "eslint **/*.{js,json,jsonc,ts}",
    "lint:md": "markdownlint-cli2",
    "lint-fix:eslint": "eslint --fix --fix-type layout **/*.{js,json,jsonc,ts}",
    "lint-fix:md": "markdownlint-cli2-fix",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "prepublishOnly": "npm run checkAll",
    "test": "concurrently npm:test:*",
    "test:ava": "ava --timeout=15s",
    "test:jest": "jest",
    "test:mocha": "mocha",
    "test-cover:ava": "c8 --reporter=lcov --reporter=text-summary ava",
    "test-cover:jest": "jest --coverage",
    "test-cover:mocha": "c8 --reporter=lcov --reporter=text-summary mocha",
    "watch:ava": "jest --watchAll",
    "watch:eslint": "onchange -v -f add -f change \"**/*.{js,json,jsonc,ts}\" -- eslint --fix --fix-type layout {{file}}",
    "watch:jest": "jest --watchAll",
    "watch:md": "onchange -v -f add -f change \"**/*.md\" -- markdownlint --fix {{file}}",
    "watch:mocha": "mocha --watch",
    "watch:prettier": "onchange -v -f add -f change \"**/*\" -- prettier --write --ignore-unknown {{file}}",
    "watch:rollup": "rollup -c --watch"
  },
  "engines": {
    "node": ">=12"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.0",
    "@tsconfig/node12": "^1.0.9",
    "@types/jest": "^27.0.2",
    "@types/mocha": "^9.0.0",
    "@types/node": "~12.20.28",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "ava": "^3.15.0",
    "c8": "^7.10.0",
    "concurrently": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jsonc": "^1.7.0",
    "eslint-plugin-tsdoc": "^0.2.14",
    "jest": "^27.3.1",
    "markdownlint-cli2": "^0.3.2",
    "mocha": "^9.1.3",
    "onchange": "^7.1.0",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.59.0",
    "ts-jest": "^27.0.7",
    "ts-node": "^9.1.1",
    "tslib": "^2.3.1",
    "typedoc": "~0.22.5",
    "typedoc-plugin-markdown": "^3.11.3",
    "typescript": "^4.4.4"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "test-ava/**/*.ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "verbose": true
  },
  "jest": {
    "coverageReporters": [
      "text-summary",
      "lcov"
    ],
    "forceCoverageMatch": [
      "**/src/**/*.ts"
    ],
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/test-jest/"
    ],
    "testEnvironment": "node",
    "testRegex": [
      ".+\\.ts$"
    ]
  },
  "mocha": {
    "extension": [
      "ts"
    ],
    "spec": "test-mocha/**/*.ts",
    "require": "ts-node/register"
  }
}
